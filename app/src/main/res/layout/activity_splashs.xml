<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于网络的缓存测试"
        android:textColor="#ff00ff"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        />
    <!--
        对于图片的数据测试
    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#00ff00"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_test1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/iv_test2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_test1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#00ff00"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_test3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/iv_test4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_test2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#00ff00"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/bt_jump"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="跳转"
            />
        <Button
            android:id="@+id/bt_do"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="操作"
            />
        <Button
            android:id="@+id/bt_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="下载"
            />
        <Button
            android:id="@+id/bt_jumpjump"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="跳转"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/bt_stringpost"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="StrPost"
            />
        <Button
            android:id="@+id/bt_filepost"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="FilePOST"
            />
        <Button
            android:id="@+id/bt_uppost"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="UPPOST"
            />
        <Button
            android:id="@+id/bt_mainjump"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Main"
            />
    </LinearLayout>
    <!-- 这里是关于测试音频视频技术的开启位置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/bt_langdu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="READ"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#00ff00"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff00ff"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />

    </ScrollView>




</LinearLayout>