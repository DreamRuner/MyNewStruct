<?xml version="1.0" encoding="utf-8"?>
<!-- 这里是主界面的布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 使用FramenLyout进行布局的占用 -->
    <FrameLayout
        android:id="@+id/frame_mainactivity_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        >
    </FrameLayout>
    <RadioGroup
        android:id="@+id/radiogroup_activitymain_rgholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mh55.0dimens55.0dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radiobut_activitymain_home"
            style="@style/radiobutton_mainactivity"
            android:drawableTop="@drawable/selector_mainactivity_home"
            android:text="首页"
            android:textColor="@drawable/selector_mainactivity_textcolor"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"

            />
        <RadioButton
            android:id="@+id/radiobut_activitymain_product"
            style="@style/radiobutton_mainactivity"
            android:drawableTop="@drawable/selector_mainactivity_trade"
            android:text="理财产品"
            android:textColor="@drawable/selector_mainactivity_textcolor"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            />
        <RadioButton
            android:id="@+id/radiobut_activitymain_user"
            style="@style/radiobutton_mainactivity"
            android:drawableTop="@drawable/selector_mainactivity_user"
            android:text="我的"
            android:textColor="@drawable/selector_mainactivity_textcolor"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            />
        <RadioButton
            android:id="@+id/radiobut_activitymain_more"
            style="@style/radiobutton_mainactivity"
            android:drawableTop="@drawable/selector_mainactivity_home"
            android:text="更多"
            android:textColor="@drawable/selector_mainactivity_textcolor"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:padding="5dp"
            />
    </RadioGroup>


</LinearLayout>
